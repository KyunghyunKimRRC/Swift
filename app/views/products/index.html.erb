<div class="d-flex justify-content-center m-3">
    <h1>Products</h1>
</div>
<div class="d-flex justify-content-center flex-wrap mb-3">
    <% @products.each do |p| %>
    <div class="card" style="width: 15rem; margin: 10px;">
        <%= link_to image_tag(p.image, :class => "card-img-top img-fixed-height bg-light"), p  %>
        <div class="card-body">
            <%= link_to p.name, p, class: "h5 card-title text-decoration-none product" %>
            <h5 class="mt-2">$<%= p.price %></h5>
            <p class="card-text">
                <% if p.description.length > 50 %>
                    <%= p.description[0..50]... %></p>
                <% else %>
                    <%= p.description %>
                <% end %>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
    </div>
    <% end %>
</div>

<%= paginate @products %>