<div class="p-5">
    <table class="table">
        <thead>
            <tr>
                <th scope="col"><h2>Shopping Cart</h2></th>
                <th scope="col"></th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |p| %>
                <tr>
                    <td scope="row"><%= link_to image_tag(p.image, :class => "img-fixed-height bg-light"), p  %></td>
                    <td>
                        <span class="fw-bold"><%= p.name %></span>
                        <div class="pt-2 pb-3">
                            <% product_id = p.id.to_s %>
                            Quantity: <%= session[:shopping_cart][product_id] %>
                        </div>
                        <div>
                            <%= button_to cart_path(id: p.id), class:"btn btn-outline-primary", method: :delete do %>
                                Remove from cart
                            <% end %>
                        </div>
                    </td>
                    <td>
                        <% if !(p.sale_price < p.price) %>
                            <small>$<%= p.price / 10 %></small>
                        <% else %>
                            <small class="bg-danger text-white">&nbsp;<%= ((p.price - p.sale_price) / p.price * 100).round %>% off&nbsp;</small>
                            <br>
                            $<%= p.sale_price / 10 %> 
                        <% end %>
                    </td>
                </tr>
            <% end %>
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        Subtotal (<%= session[:shopping_cart].size %> items): <span class="fw-bold">$<%= @subtotal %></span>
                        <br>
                        GST: <span class="fw-bold">$<%= @gst %></span>
                        <br>
                        PST/HST: <span class="fw-bold">$<%= @pstOrHst %></span>
                        <br>
                        Total: <span class="fw-bold">$<%= @total %></span>
                    </td>
                </tr>
        </tbody>
    </table>
</div>

<%= paginate @products %>